<div class="container mt-5">
    <div class="text-center">
        <h1>{{movie.name}}</h1>
    </div>
    <div class="mt-5">
    <video-js id=main_video class="vjs-default-skin vjs-big-play-centered vjs-fill" controls>
        <source src="{{movie.server_url}}/playlist.m3u8" type="application/x-mpegURL">
